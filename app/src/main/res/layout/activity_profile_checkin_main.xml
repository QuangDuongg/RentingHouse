<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- contain back activity -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.example.swipe.Utils.SquareImageView
                    android:id="@+id/profileImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="Click to change profile photo"
                    android:scaleType="centerCrop"
                    android:src="@drawable/monkey" />

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_down_arrow"
                    android:contentDescription="TODO" />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="358dp"
                    android:layout_marginTop="37dp"
                    android:layout_marginEnd="23dp"
                    android:layout_marginRight="23dp"
                    android:layout_marginBottom="664dp"
                    android:background="@drawable/ic_close_black_24dp"
                    android:contentDescription="TODO"
                    android:foregroundGravity="center" />
            </RelativeLayout>

            <TextView
                android:id="@+id/District_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="District 5"
                android:textColor="@color/textColor"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/distance_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/ic_location"
                android:gravity="center"
                android:text="2 km away"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/address_beforematch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="75 Nguyen Van Cu Street"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/price_beforematch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="6 000 000 VND"
                android:textSize="16sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <ImageButton
                        android:id="@+id/dislikebtn"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/round_button_with_border"
                        android:elevation="7dp"
                        android:onClick="DislikeBtn"
                        android:padding="10dp"
                        android:src="@drawable/ic_dislike" />

                    <ImageButton
                        android:id="@+id/commentbtn"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/round_button_with_border"
                        android:elevation="7dp"
                        android:padding="10dp"
                        android:src="@drawable/ic_comment" />


                    <ImageButton
                        android:id="@+id/likebtn"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/round_button_with_border"
                        android:elevation="7dp"
                        android:onClick="LikeBtn"
                        android:padding="10dp"
                        android:src="@drawable/ic_like1" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>
